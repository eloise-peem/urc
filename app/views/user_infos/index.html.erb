<% @user_info.each do |f| %>

	<div class="col-lg-4 mb-4">
		<div class="card h-100">
			<h3 class="card-header"> 
					<%= image_tag  f.picture, style: 'height: 80px;width: 80px; radius: 5%; ' %>
					<b><%= f.first_name %> <%= f.last_name %></span></b></h3>

						<div class="card-body">
							<p class="card-text">
								<strong><i class="ico-envelop"></i></strong> <%= f.email %><br>
								<strong><i class="ico-link"></i></strong><a href="<%= f.links %>" target="_blank"> <%= f.links %></a><br>
								<strong><i class="ico-book"></i> Field of Study: </strong> <%= f.field %><br>
								<strong><i class="ico-graduation"></i> Degree: </strong> <%= f.degree %><br>
								<strong><i class="ico-pencil"></i> Interests:</strong>  <%= f.interest %><br>
							</p>
						</div>

			<% if current_user.present? %>
			<div class="card-footer">
					<a href="../user_infos/<%= f.id %>" class="btn btn-primary">View Author</a>
			</div>
			<% end %>
		</div>
	</div>
<% end %>