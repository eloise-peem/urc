				<th>Link to Main Paper</th>
				<br><%= f.text_field :url %>
			</div>

			<div class="field">
				<th>Name of Institution</th>
				<br><%= f.text_field :institution %>
			</div>

			<div class="field">
				<th>Location of Institution</th>
				<br><%= f.text_field :location %>
			</div>

			<div class="field">
				<th>Upload Abstract</th>
				<br><%= f.file_field :abstract%>
			</div>

			<div class="field">
				<th>Upload Short Paper</th>
				<br><%= f.file_field :short_paper %>
			</div>

			<div class="field">
				<th>Upload Full-Paper</th>
				<br><%= f.file_field :full_paper %>
			</div>


			<div class="field">
       			<th>Related Tags</th><br>
       			<em>(Separate tags with a comma)</em><br>
      			<%= f.text_field :all_tags%>
    		</div>

