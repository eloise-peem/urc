<% if @post.errors.any? %>

  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
 
    <ul>
    	<% @post.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
    	<% end %>
    </ul>
  </div>
<% end %>

<% if @post.paper_type == 1 %>
<div class = "container">
	<div id = "page_wrapper">
		<br>
			<h2>Edit Thesis</h2>	
		<hr>
		
		<%= form_for :post, :method => "put" do |f| %>
		<br>
			<div class="field">
				<th>Title of Dissertation</th>
			    <br><%= f.text_field :title %> 
			</div>

			<div class="field">
				<th>Author(s)</th><em> If more than one (1), separate names with commas. </em>
